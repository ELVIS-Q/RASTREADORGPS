<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos de tu aplicación -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Declaración de característica OpenGL ES 2.0 para Google Maps -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Para indicar el uso del hardware de telefonía -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        tools:targetApi="31">

        <!-- La meta-data de la API Key SIEMPRE va dentro de <application> y generalmente al principio -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBjJa83tQn1Wr59C2NEKLNjYYfQFtLRe_g" /> <!-- ¡IMPORTANTE! Reemplaza con tu API Key real -->

        <!-- Actividad de Login (Punto de entrada principal de la app) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad de Registro (Si tu clase se llama RegistroActivity.java) -->
        <activity
            android:name=".RegistroActivity"
            android:exported="false" />

        <!-- Actividad Principal de la aplicación -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Actividad de Historial -->
        <activity
            android:name=".HistorialActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Receptor de SMS (Tu SmsReceiverActivity) -->
        <receiver
            android:name=".SmsReceiverActivity"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
            <!-- Asegúrate de que NO haya ninguna línea android:permission="android.permission.BROADCAST_SMS" aquí -->
        </receiver>

    </application>

</manifest>
